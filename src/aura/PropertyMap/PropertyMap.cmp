<aura:component implements="flexipage:availableForAllPageTypes" access="global">

  <aura:attribute name="vfHost" type="String" />
  <aura:attribute name="address" type="String" />
  <aura:attribute name="record" type="Object" />
  <aura:attribute name="layers" type="Object[]" />
  <aura:attribute name="DEBUG_resetRecordMethodCalled" type="String" default="Nada" />

  <aura:handler name="init" value="{! this }" action="{! c.doInit }" />

  <aura:registerEvent name="updateRecord" type="c:PropertyUpdateRecord" />

  <aura:method name="resetRecord" action="{! c.executeResetRecord }" />
  <aura:method name="toggleLayer" action="{! c.executeToggleLayer }" />

  <p><strong>PropertyMap.cmp</strong></p>
  <p>resetRecord method called: {! v.DEBUG_resetRecordMethodCalled }</p>
  <p><strong>v.record.Street: </strong>{! v.record.Street}</p>

  <iframe aura:id="vfFrame" src="{! 'https://' + v.vfHost + '/apex/PropertyMap' }"
    frameborder="0" width="100%" height="376" />

</aura:component>
